fun main
begin

    int x;
    int aux;
    int x_copy;
    int y;
    x = 0; // range should be {0,0}

    if x < 0 then
        x = 2;
    else
        x = 0;
    end;
    // range should be {0,2}

    x = x + 2; // range should be {2,4}
    x = x - 1; // range should be {1,3}
    x = x * 8; // range should be {8,24}
    x = x / 2; // range should be {4,12}

    x_copy = x; // range should be {4,12}
    y = 8; // range should be {8,8}
    int large = 100;
    aux = (x == x_copy); // should be either true or false {0,1}
    aux = (y == y); // should be true {1,1}
    aux = (x == large); // should be false {0,0}
    aux = (x != x_copy); // should be either true or false {0,1}
    aux = (y != y); // should be false {0,0}
    aux = (x != large); // should be true {1,1}
    aux = (x < x_copy); // should be either true or false {0,1}
    aux = (large < y); // should be false {0,0}
    aux = (x < large); // should be true {1,1}
    // The <= it is almost the same as before, we check only one case
    aux = (x <= 12); // should be true {1,1}


    return 1;
end