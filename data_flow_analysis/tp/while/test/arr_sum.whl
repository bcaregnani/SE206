// Function to sum elements of an array
// args:
//        - arr : array to be sumed
// returns:
//        - sum : sum of elements in the array
//
//




fun arr_sum(int *arr, int n)
begin
  int *e;
  e = arr + n;
  int sum = 0;
  while arr < e do
    sum = sum + *arr;
    arr = arr + 1;
  end;
  return sum;
end

